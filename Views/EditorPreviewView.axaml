<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:MarkdownViewer.ViewModels"
             xmlns:conv="using:MarkdownViewer.Converters"
             xmlns:controls="using:MarkdownViewer.Controls"
             xmlns:rtb="using:AvRichTextBox"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="650"
             x:Class="MarkdownViewer.Views.EditorPreviewView"
             x:DataType="vm:DocumentViewModel">

    <UserControl.Styles>
        <!-- Custom Scrollbar Styling -->
        <Style Selector="ScrollViewer /template/ ScrollBar">
            <Setter Property="AllowAutoHide" Value="True"/>
            <Setter Property="Margin" Value="0"/>
        </Style>

        <Style Selector="ScrollViewer /template/ ScrollBar:vertical">
            <Setter Property="Width" Value="12"/>
        </Style>

        <Style Selector="ScrollViewer /template/ ScrollBar:horizontal">
            <Setter Property="Height" Value="12"/>
        </Style>

        <!-- Scrollbar Track -->
        <Style Selector="ScrollViewer /template/ ScrollBar /template/ Border#PART_TrackBackground">
            <Setter Property="Background" Value="Transparent"/>
        </Style>

        <!-- Scrollbar Thumb (the draggable part) -->
        <Style Selector="ScrollViewer /template/ ScrollBar /template/ Thumb">
            <Setter Property="Background" Value="#C0C0C0"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Margin" Value="2"/>
        </Style>

        <Style Selector="ScrollViewer /template/ ScrollBar /template/ Thumb:pointerover">
            <Setter Property="Background" Value="#A0A0A0"/>
        </Style>

        <Style Selector="ScrollViewer /template/ ScrollBar /template/ Thumb:pressed">
            <Setter Property="Background" Value="#808080"/>
        </Style>

        <!-- Hide scrollbar buttons -->
        <Style Selector="ScrollViewer /template/ ScrollBar /template/ RepeatButton">
            <Setter Property="IsVisible" Value="False"/>
        </Style>
    </UserControl.Styles>

    <Grid RowDefinitions="0,*" ColumnDefinitions="*,5,*">
        <!-- Editor Panel -->
        <Border Grid.Row="1" Grid.Column="0" BorderThickness="0,0,1,0" Name="EditorBorder" IsVisible="{Binding IsReadMode, Converter={x:Static conv:BoolNotConverter.Instance}}">
            <controls:LineNumberedTextEditor
                Name="MarkdownEditor"
                Text="# Start Typing Your Markdown Here!&#x0A;&#x0A;Try:&#x0A;- **Bold text**&#x0A;- *Italic text*&#x0A;- Lists and more&#x0A;&#x0A;Press Ctrl+Shift+T to toggle dark mode"
                ShowLineNumbers="{Binding EditorViewModel.ShowLineNumbers}"/>
        </Border>

        <!-- Splitter -->
        <GridSplitter Grid.Row="1" Grid.Column="1" IsVisible="{Binding IsReadMode, Converter={x:Static conv:BoolNotConverter.Instance}}"
                      ResizeDirection="Columns"
                      Name="Splitter"/>

        <!-- Preview Panel -->
        <!-- Edit mode preview (right pane) -->
        <Border Grid.Row="1" Grid.Column="2" Name="PreviewBorderRight" IsVisible="{Binding IsReadMode, Converter={x:Static conv:BoolNotConverter.Instance}}">
            <ScrollViewer Name="PreviewScrollerRight"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Disabled"
                         AllowAutoHide="True"
                         Padding="16"
                         Focusable="True">
                <StackPanel Name="PreviewContentRight" Spacing="8" MaxWidth="1200" Focusable="True">
                    <TextBlock Text="Start typing markdown in the editor to see the preview..."
                              FontStyle="Italic"
                              TextWrapping="Wrap"
                              Name="PlaceholderRight"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Read mode preview (full width) with RichTextBox -->
        <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Name="PreviewBorderFull" IsVisible="{Binding IsReadMode}">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="16">
                <rtb:RichTextBox Name="PreviewRichTextBox" IsReadOnly="True" BorderThickness="0" Background="Transparent"/>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
