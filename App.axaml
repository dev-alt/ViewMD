<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="MarkdownViewer.App"
             xmlns:local="using:MarkdownViewer"
             RequestedThemeVariant="Light">

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme />

        <!-- Custom Color Scheme - Light Theme Only with Glassmorphism -->
        <Style Selector="Window">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                        <GradientStop Color="#F8F9FA" Offset="0"/>
                        <GradientStop Color="#E9ECEF" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>

        <Style Selector="Menu">
            <Setter Property="Background" Value="#F0FFFFFF"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#40000000" OffsetX="0" OffsetY="2" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style Selector="MenuItem">
            <Setter Property="Background" Value="Transparent"/>
        </Style>

        <Style Selector="MenuItem:pointerover /template/ Border#PART_LayoutRoot">
            <Setter Property="Background" Value="#E5E5E5"/>
        </Style>

        <Style Selector="MenuItem:selected /template/ Border#PART_LayoutRoot">
            <Setter Property="Background" Value="#E0E0E0"/>
        </Style>

        <!-- TabControl Styling with Glassmorphism -->
        <Style Selector="TabControl">
            <Setter Property="Background" Value="#FAFBFC"/>
        </Style>

        <Style Selector="TabItem">
            <Setter Property="Background" Value="#E0FFFFFF"/>
            <Setter Property="Foreground" Value="#000000"/>
            <Setter Property="BorderBrush" Value="#D0FFFFFF"/>
            <Setter Property="BorderThickness" Value="1,1,1,0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="0,0,2,0"/>
            <Setter Property="CornerRadius" Value="6,6,0,0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#20000000" OffsetX="0" OffsetY="1" BlurRadius="4"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style Selector="TabItem:pointerover">
            <Setter Property="Background" Value="#EAFFFFFF"/>
        </Style>

        <Style Selector="TabItem:selected">
            <Setter Property="Background" Value="#FAFFFFFF"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#30000000" OffsetX="0" OffsetY="2" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Button Styling with Glass Effect -->
        <Style Selector="Button">
            <Setter Property="Background" Value="#DDFFFFFF"/>
            <Setter Property="Foreground" Value="#000000"/>
            <Setter Property="BorderBrush" Value="#C0FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#15000000" OffsetX="0" OffsetY="1" BlurRadius="3"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0:0:0.15"/>
                    <BrushTransition Property="BorderBrush" Duration="0:0:0.15"/>
                </Transitions>
            </Setter>
        </Style>

        <Style Selector="Button:pointerover">
            <Setter Property="Background" Value="#EAFFFFFF"/>
            <Setter Property="BorderBrush" Value="#D0FFFFFF"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#25000000" OffsetX="0" OffsetY="2" BlurRadius="6"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style Selector="Button:pressed">
            <Setter Property="Background" Value="#D0FFFFFF"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#10000000" OffsetX="0" OffsetY="1" BlurRadius="2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Toolbar button glass effects -->
        <Style Selector="Button.toolbar-btn">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="CornerRadius" Value="6"/>
        </Style>

        <Style Selector="Button.toolbar-btn:pointerover">
            <Setter Property="Background" Value="#50FFFFFF"/>
            <Setter Property="BorderBrush" Value="#60FFFFFF"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#20000000" OffsetX="0" OffsetY="1" BlurRadius="4"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style Selector="Button.toolbar-btn:pressed">
            <Setter Property="Background" Value="#40FFFFFF"/>
        </Style>

        <!-- TextBox Styling with Glass -->
        <Style Selector="TextBox">
            <Setter Property="Background" Value="#F5FFFFFF"/>
            <Setter Property="Foreground" Value="#000000"/>
            <Setter Property="BorderBrush" Value="#D0FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>

        <Style Selector="TextBox:focus">
            <Setter Property="BorderBrush" Value="#4D9DE0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#304D9DE0" OffsetX="0" OffsetY="0" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Border Styling -->
        <Style Selector="Border">
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0:0:0.2"/>
                    <BrushTransition Property="BorderBrush" Duration="0:0:0.2"/>
                </Transitions>
            </Setter>
        </Style>

        <!-- TextBlock Styling -->
        <Style Selector="TextBlock">
            <Setter Property="Foreground" Value="#000000"/>
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Foreground" Duration="0:0:0.2"/>
                </Transitions>
            </Setter>
        </Style>

        <!-- ScrollViewer Styling -->
        <Style Selector="ScrollViewer">
            <Setter Property="Background" Value="#FFFFFF"/>
        </Style>

        <!-- GridSplitter Styling -->
        <Style Selector="GridSplitter">
            <Setter Property="Background" Value="#E0E0E0"/>
        </Style>

        <Style Selector="GridSplitter:pointerover">
            <Setter Property="Background" Value="#D0D0D0"/>
        </Style>

        <!-- Separator Styling -->
        <Style Selector="Separator">
            <Setter Property="Background" Value="#E0E0E0"/>
        </Style>

        <!-- ToolTip Styling -->
        <Style Selector="ToolTip">
            <Setter Property="Background" Value="#F9F9F9"/>
            <Setter Property="BorderBrush" Value="#D0D0D0"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Application.Styles>
</Application>